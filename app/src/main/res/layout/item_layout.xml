<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="isExpanded"
            type="Boolean" />
        <variable
            name="isLoaded"
            type="Boolean" />

    </data>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:padding="1dp"
                android:layout_margin="5dp"
                android:src="@drawable/round_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:minWidth="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_rect_bg"
                app:layout_constraintBottom_toTopOf="@id/repo_name"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                app:layout_constraintTop_toTopOf="@id/profile_pic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repo_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:background="@drawable/round_rect_bg"
                app:layout_constraintBottom_toBottomOf="@+id/profile_pic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                app:layout_constraintTop_toBottomOf="@id/author_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/repo_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:visibility="@{isExpanded? View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                app:layout_constraintTop_toBottomOf="@id/repo_name" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/round_bg"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:visibility="@{isExpanded? View.VISIBLE:View.GONE}"
                app:drawableTint="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/star"
                app:layout_constraintStart_toEndOf="@id/profile_pic"
                app:layout_constraintTop_toBottomOf="@id/repo_description" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/star"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_margin="5dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/star_yellow_16"
                android:visibility="@{isExpanded? View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toStartOf="@id/fork"
                app:layout_constraintStart_toEndOf="@id/language"
                app:layout_constraintTop_toBottomOf="@id/repo_description" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/fork_black_16"
                android:layout_margin="5dp"
                android:visibility="@{isExpanded? View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/star"
                app:layout_constraintTop_toBottomOf="@id/repo_description" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>